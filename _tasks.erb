<%- if bundler? -%>
require 'rdoc/task'
RDoc::Task.new do |rdoc|
  rdoc.title = <%= @name.dump %>
end
<%- else -%>
begin
  gem 'rdoc', '<%= @development_dependencies['rdoc'] %>'
  require 'rdoc/task'

  RDoc::Task.new do |rdoc|
    rdoc.title = <%= @name.dump %>
  end
rescue LoadError => e
  task :rdoc do
    abort e.message
  end
end
<%- end -%>
task :doc => :rdoc
